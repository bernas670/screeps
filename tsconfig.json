{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es6"],
    "target": "es6",
    "moduleResolution": "Node",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "types": ["node", "screeps"],
    "outDir": "./default",
    "rootDir": "./src"
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts"],
  "exclude": ["node_modules", "default", ".git"]
}
